---
const zhLink = '/zh/';
const enLink = '/en/';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>konakona</title>
		<meta name="robots" content="noindex, nofollow" />
		<link rel="icon" type="image/svg+xml" href="/favicon-light.svg" />
		<script is:inline>
			// Instant redirect based on browser language - runs before body renders
			(function() {
				var languages = navigator.languages && navigator.languages.length
					? navigator.languages
					: [navigator.language || ''];
				for (var i = 0; i < languages.length; i++) {
					var lang = (languages[i] || '').toLowerCase();
					if (lang.startsWith('zh')) {
						window.location.replace('/zh/');
						return;
					}
					if (lang.startsWith('en')) {
						window.location.replace('/en/');
						return;
					}
				}
				// Default to English
				window.location.replace('/en/');
			})();
		</script>
	</head>
	<body>
		<!-- Fallback for users with JS disabled -->
		<noscript>
			<meta http-equiv="refresh" content="0;url=/en/" />
			<style>
				body {
					font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
					min-height: 100vh;
					display: flex;
					align-items: center;
					justify-content: center;
					margin: 0;
					background: #fafaf9;
					color: #292524;
				}
				.notice { text-align: center; padding: 2rem; }
				.notice a { color: #2563eb; margin: 0 0.5rem; }
			</style>
			<div class="notice">
				<p>Please select your language:</p>
				<p>
					<a href="/zh/">中文</a> ·
					<a href="/en/">English</a>
				</p>
			</div>
		</noscript>
	</body>
</html>

