---
import { SITE } from '../site.config';
export interface Props {
  lang: 'zh-CN' | 'en';
  title?: string;
  description?: string;
  canonical?: string;
  alternates?: { 'zh-CN'?: string; en?: string };
  ogImage?: string;
}
const { lang, title, description, canonical, alternates, ogImage } = Astro.props as Props;
const site = SITE.domain;
const current = canonical || Astro.url.toString();
const pageTitle = title || SITE.title;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={current} />
    {alternates?.['zh-CN'] && <link rel="alternate" hreflang="zh-CN" href={alternates['zh-CN']} />}
    {alternates?.en && <link rel="alternate" hreflang="en" href={alternates.en} />}
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description || ''} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={current} />
    <meta property="og:image" content={ogImage || new URL(`/og/${Astro.params.slug || 'site'}.svg`, site).href} />
    <meta property="og:locale" content={lang === 'zh-CN' ? 'zh_CN' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'zh-CN' ? 'en_US' : 'zh_CN'} />
    <meta name="twitter:card" content="summary_large_image" />
    <style is:global>
      :root { color-scheme: light dark; }
      body { max-width: 72ch; margin: 0 auto; padding: 2rem 1rem; line-height: 1.7; font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Noto Sans, Apple Color Emoji, Segoe UI Emoji; }
      a { color: #2563eb; text-decoration: none; }
      a:hover { text-decoration: underline; }
      ul { padding-left: 1.25rem; }
      h1,h2,h3 { line-height: 1.2; }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
