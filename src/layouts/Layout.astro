---
import { SITE } from '../site.config';
import Footer from '../components/Footer.astro';

import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/lora/400.css';
import '@fontsource/lora/600.css';
import '@fontsource/noto-sans-sc/400.css';
import '@fontsource/noto-sans-sc/500.css';

import inter400 from '@fontsource/inter/files/inter-latin-400-normal.woff2';
import inter600 from '@fontsource/inter/files/inter-latin-600-normal.woff2';
import lora400 from '@fontsource/lora/files/lora-latin-400-normal.woff2';
import lora600 from '@fontsource/lora/files/lora-latin-600-normal.woff2';
import notoSansSC400 from '@fontsource/noto-sans-sc/files/noto-sans-sc-chinese-simplified-400-normal.woff2';
import notoSansSC500 from '@fontsource/noto-sans-sc/files/noto-sans-sc-chinese-simplified-500-normal.woff2';

export interface Props {
  lang: 'zh-CN' | 'en';
  title?: string;
  description?: string;
  canonical?: string;
  alternates?: { 'zh-CN'?: string; en?: string };
  ogImage?: string;
}
const { lang, title, description, canonical, alternates, ogImage } = Astro.props as Props;
const site = SITE.domain;
const current = canonical || Astro.url.toString();
const pageTitle = title || SITE.title;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon-dark.svg" media="(prefers-color-scheme: dark)" />
    <link rel="icon" type="image/svg+xml" href="/favicon-light.svg" media="(prefers-color-scheme: light)" />
    <link rel="icon" type="image/svg+xml" href="/favicon-light.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Font preloads -->
    <link rel="preload" href={inter400} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={inter600} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={lora400} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={lora600} as="font" type="font/woff2" crossorigin />
    {lang === 'zh-CN' && (
      <>
        <link rel="preload" href={notoSansSC400} as="font" type="font/woff2" crossorigin />
        <link rel="preload" href={notoSansSC500} as="font" type="font/woff2" crossorigin />
      </>
    )}
    
    <script src="/scripts/main.js" defer></script>
    <title>{pageTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={current} />
    {alternates?.['zh-CN'] && <link rel="alternate" hreflang="zh-CN" href={alternates['zh-CN']} />}
    {alternates?.en && <link rel="alternate" hreflang="en" href={alternates.en} />}
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description || ''} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={current} />
    <meta property="og:image" content={ogImage || new URL(`/og/${Astro.params.slug || 'site'}.svg`, site).href} />
    <meta property="og:locale" content={lang === 'zh-CN' ? 'zh_CN' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'zh-CN' ? 'en_US' : 'zh_CN'} />
    <meta name="twitter:card" content="summary_large_image" />
    <style is:global>
      :root {
        color-scheme: light dark;
      }
      
      /* Disable all transitions when switching themes */
      :root.theme-transitioning *,
      :root.theme-transitioning *::before,
      :root.theme-transitioning *::after {
        transition: none !important;
      }
      
      :root,
      :root[data-theme="light"] {
        --text: #292524;
        --text-muted: #78716c;
        --bg: #fafaf9;
        --link: #2563eb;
        --border: #e7e5e4;
        --code-bg: #f5f5f4;
        --font-family: "Lora", "Georgia", serif;
        --font-heading: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      }
      
      :root[lang="zh-CN"],
      :root[lang="zh-CN"][data-theme="light"] {
        --font-family: "Noto Sans SC", -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
        --font-heading: "Noto Sans SC", -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
      }
      
      :root[data-theme="dark"] {
        color-scheme: dark;
        --text: #d6d3d1;
        --text-muted: #a8a29e;
        --bg: #1c1917;
        --link: #60a5fa;
        --border: #292524;
        --code-bg: #292524;
      }
      
      :root[lang="zh-CN"][data-theme="dark"] {
        --font-family: "Noto Sans SC", -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
        --font-heading: "Noto Sans SC", -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
      }
      
      @media (prefers-color-scheme: dark) {
        :root:not([data-theme]) {
          --text: #d6d3d1;
          --text-muted: #a8a29e;
          --bg: #1c1917;
          --link: #60a5fa;
          --border: #292524;
          --code-bg: #292524;
        }
        
        :root[lang="zh-CN"]:not([data-theme]) {
          --font-family: "Noto Sans SC", -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
          --font-heading: "Noto Sans SC", -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
        }
      }
      * { box-sizing: border-box; }
      
      html {
        height: 100%;
        overflow-y: scroll; /* Always show scrollbar */
      }
      
      body {
        height: 100%;
      }
      
      body {
        max-width: 45rem;
        margin: 0 auto;
        padding: 6rem 1rem 0;
        line-height: 1.6;
        font-family: var(--font-family);
        color: var(--text);
        background: var(--bg);
        font-size: 16px;
        transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      a {
        color: var(--link);
        text-decoration: none;
        transition: color 0.2s ease-in-out;
      }
      a:hover {
        text-decoration: underline;
      }
      
      .content {
        flex: 1;
        padding-bottom: 2rem;
      }
      
      h1, h2, h3, h4, h5, h6 {
        line-height: 1.2;
        margin: 2rem 0 1rem;
        font-weight: 600;
        font-family: var(--font-heading);
        transition: color 0.3s ease-in-out;
      }
      h1 { font-size: 1.75rem; margin-top: 0; }
      h2 { font-size: 1.35rem; }
      h3 { font-size: 1.15rem; }
      p { margin: 1rem 0; }
      ul, ol { padding-left: 1.5rem; margin: 1rem 0; }
      li { margin: 0.5rem 0; }
      code {
        font-family: ui-monospace, SFMono-Regular, Consolas, monospace;
        font-size: 0.9em;
        background: var(--code-bg);
        padding: 0.2em 0.4em;
        border-radius: 3px;
        transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
      }
      pre {
        background: var(--code-bg);
        padding: 1rem;
        border-radius: 6px;
        overflow-x: auto;
        margin: 1rem 0;
        transition: background 0.3s ease-in-out;
      }
      pre code {
        background: none;
        padding: 0;
      }
      hr {
        border: none;
        border-top: 1px solid var(--border);
        margin: 2rem 0;
        transition: border-color 0.3s ease-in-out;
      }
      blockquote {
        border-left: 3px solid var(--border);
        padding-left: 1rem;
        margin: 1rem 0;
        color: var(--text-muted);
        transition: border-color 0.3s ease-in-out, color 0.3s ease-in-out;
      }
      
      /* Staggered fade-in animation (Nano style) */
      .animate {
        opacity: 0;
        transform: translateY(12px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }
      
      .animate.show {
        opacity: 1;
        transform: translateY(0);
      }
    </style>
  </head>
  <body>
    <main class="content">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
