---
import { SITE } from '../site.config';
import Footer from '../components/Footer.astro';

export interface Props {
  lang: 'zh-CN' | 'en';
  title?: string;
  description?: string;
  canonical?: string;
  alternates?: { 'zh-CN'?: string; en?: string };
  ogImage?: string;
}
const { lang, title, description, canonical, alternates, ogImage } = Astro.props as Props;
const site = SITE.domain;
const current = canonical || Astro.url.toString();
const pageTitle = title || SITE.title;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/source-han-sans-sc@1.0.0/source-han-sans-sc.min.css" rel="stylesheet">
    <title>{pageTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={current} />
    {alternates?.['zh-CN'] && <link rel="alternate" hreflang="zh-CN" href={alternates['zh-CN']} />}
    {alternates?.en && <link rel="alternate" hreflang="en" href={alternates.en} />}
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description || ''} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={current} />
    <meta property="og:image" content={ogImage || new URL(`/og/${Astro.params.slug || 'site'}.svg`, site).href} />
    <meta property="og:locale" content={lang === 'zh-CN' ? 'zh_CN' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'zh-CN' ? 'en_US' : 'zh_CN'} />
    <meta name="twitter:card" content="summary_large_image" />
    <style is:global>
      :root {
        color-scheme: light dark;
      }
      
      :root,
      :root[data-theme="light"] {
        --text: #292524;
        --text-muted: #78716c;
        --bg: #fafaf9;
        --link: #2563eb;
        --border: #e7e5e4;
        --code-bg: #f5f5f4;
        --font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      }
      
      :root[lang="zh-CN"],
      :root[lang="zh-CN"][data-theme="light"] {
        --font-family: "Source Han Sans SC", -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
      }
      
      :root[data-theme="dark"] {
        color-scheme: dark;
        --text: #d6d3d1;
        --text-muted: #a8a29e;
        --bg: #1c1917;
        --link: #60a5fa;
        --border: #292524;
        --code-bg: #292524;
      }
      
      @media (prefers-color-scheme: dark) {
        :root:not([data-theme]) {
          --text: #d6d3d1;
          --text-muted: #a8a29e;
          --bg: #1c1917;
          --link: #60a5fa;
          --border: #292524;
          --code-bg: #292524;
        }
      }
      * { box-sizing: border-box; }
      
      html, body {
        height: 100%;
      }
      
      body {
        max-width: 45rem;
        margin: 0 auto;
        padding: 6rem 1rem 0;
        line-height: 1.6;
        font-family: var(--font-family);
        color: var(--text);
        background: var(--bg);
        font-size: 16px;
        transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      a {
        color: var(--link);
        text-decoration: none;
        transition: color 0.2s ease-in-out;
      }
      a:hover {
        text-decoration: underline;
      }
      
      .content {
        flex: 1;
        padding-bottom: 2rem;
      }
      
      h1, h2, h3, h4, h5, h6 {
        line-height: 1.2;
        margin: 2rem 0 1rem;
        font-weight: 600;
        transition: color 0.3s ease-in-out;
      }
      h1 { font-size: 2rem; margin-top: 0; }
      h2 { font-size: 1.5rem; }
      h3 { font-size: 1.25rem; }
      p { margin: 1rem 0; }
      ul, ol { padding-left: 1.5rem; margin: 1rem 0; }
      li { margin: 0.5rem 0; }
      code {
        font-family: ui-monospace, SFMono-Regular, Consolas, monospace;
        font-size: 0.9em;
        background: var(--code-bg);
        padding: 0.2em 0.4em;
        border-radius: 3px;
        transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
      }
      pre {
        background: var(--code-bg);
        padding: 1rem;
        border-radius: 6px;
        overflow-x: auto;
        margin: 1rem 0;
        transition: background 0.3s ease-in-out;
      }
      pre code {
        background: none;
        padding: 0;
      }
      hr {
        border: none;
        border-top: 1px solid var(--border);
        margin: 2rem 0;
        transition: border-color 0.3s ease-in-out;
      }
      blockquote {
        border-left: 3px solid var(--border);
        padding-left: 1rem;
        margin: 1rem 0;
        color: var(--text-muted);
        transition: border-color 0.3s ease-in-out, color 0.3s ease-in-out;
      }
      
      /* Staggered fade-in animation (Nano style) */
      .animate {
        opacity: 0;
        transform: translateY(12px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }
      
      .animate.show {
        opacity: 1;
        transform: translateY(0);
      }
    </style>
    <script is:inline>
      (function(){
        try{
          const m=(n)=>{const r=document.cookie.match(new RegExp('(?:^|; )'+n+'=([^;]*)'));return r?decodeURIComponent(r[1]):''};
          if(!m('lang')){
            const nav=(navigator.language||'').toLowerCase();
            document.cookie='lang='+(nav.startsWith('en')?'en':'zh-CN')+'; path=/; max-age=31536000';
          }
        }catch(e){}
        
        // Staggered animation on page load
        document.addEventListener('DOMContentLoaded', () => {
          const animateElements = document.querySelectorAll('.animate');
          animateElements.forEach((element, index) => {
            setTimeout(() => {
              element.classList.add('show');
            }, index * 100);
          });
        });
      })();
    </script>
  </head>
  <body>
    <main class="content">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
