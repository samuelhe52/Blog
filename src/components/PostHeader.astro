---
interface Props {
  title: string;
  description?: string;
  date?: Date;
  lang: 'zh-CN' | 'en';
}

const { title, description, date, lang } = Astro.props;
---

<div class="post-header">
  <h1>{title}</h1>
  {date && (
    <div class="meta">
      <time datetime={date.toISOString()}>
        {date.toLocaleDateString(lang === 'zh-CN' ? 'zh-CN' : 'en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
      </time>
    </div>
  )}
  {description && <p class="description">{description}</p>}
</div>

<style>
  .post-header {
    margin-bottom: 2rem;
  }
  h1 {
    margin-bottom: 0.5rem;
  }
  .meta {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  time {
    display: inline;
  }
  .description {
    color: var(--text-muted);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }
</style>
