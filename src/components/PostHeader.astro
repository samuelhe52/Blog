---
interface Props {
  title: string;
  description?: string;
  date?: Date;
  readingTime?: string;
}

const { title, description, date, readingTime } = Astro.props;
---

<div class="post-header">
  <h1>{title}</h1>
  {(date || readingTime) && (
    <div class="meta">
      {date && (
        <time datetime={date.toISOString()}>
          {date.toLocaleDateString('zh-CN', { year: 'numeric', month: 'short', day: 'numeric' })}
        </time>
      )}
      {readingTime && (
        <>
          &bull;
          <span class="reading-time">{readingTime}</span>
        </>
      )}
    </div>
  )}
  {description && <p class="description">{description}</p>}
</div>

<style>
  .post-header {
    margin-bottom: 2rem;
  }
  h1 {
    margin-bottom: 0.5rem;
  }
  .meta {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  time {
    display: inline;
  }
  .reading-time {
    display: inline;
  }
  .description {
    color: var(--text-muted);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }
</style>
