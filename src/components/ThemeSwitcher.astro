---
interface Props {
  lang: 'zh-CN' | 'en';
}

const { lang } = Astro.props;
const lightLabel = lang === 'zh-CN' ? '浅色' : 'Light';
const darkLabel = lang === 'zh-CN' ? '深色' : 'Dark';
const autoLabel = lang === 'zh-CN' ? '自动' : 'Auto';
---

<div class="theme-switcher">
  <button id="theme-light" aria-label={lightLabel} title={lightLabel}>
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="5"></circle>
      <line x1="12" y1="1" x2="12" y2="3"></line>
      <line x1="12" y1="21" x2="12" y2="23"></line>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
      <line x1="1" y1="12" x2="3" y2="12"></line>
      <line x1="21" y1="12" x2="23" y2="12"></line>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </svg>
  </button>
  <button id="theme-dark" aria-label={darkLabel} title={darkLabel}>
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
  </button>
  <button id="theme-auto" aria-label={autoLabel} title={autoLabel} class="active">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
      <line x1="8" y1="21" x2="16" y2="21"></line>
      <line x1="12" y1="17" x2="12" y2="21"></line>
    </svg>
  </button>
</div>

<style>
  .theme-switcher {
    display: flex;
    gap: 0.25rem;
  }
  
  .theme-switcher button {
    width: 2.25rem;
    height: 2.25rem;
    border: none;
    background: transparent;
    color: var(--text-muted);
    cursor: pointer;
    border-radius: 6px;
    transition: background 0.2s, opacity 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 640px) {
    .theme-switcher {
      gap: 0.15rem;
    }
    .theme-switcher button {
      width: 1.95rem;
      height: 1.95rem;
      border-radius: 5px;
    }
    .theme-switcher button svg {
      width: 16px;
      height: 16px;
    }
  }
  
  .theme-switcher button svg {
    stroke: var(--text-muted);
    transition: stroke 0.3s ease-in-out;
  }

  @media (max-width: 640px) {
    .theme-switcher button svg {
      stroke-width: 1.4;
    }
  }
  
  .theme-switcher button:hover {
    background: var(--code-bg);
  }

  @media (max-width: 640px) {
    .theme-switcher button:hover {
      background: var(--code-bg);
    }
  }
  
  .theme-switcher button:hover svg {
    stroke: var(--text);
  }
  
  .theme-switcher button.active {
    background: var(--link);
  }

  @media (max-width: 640px) {
    .theme-switcher button.active {
      box-shadow: 0 0 0 1px var(--link) inset;
    }
  }
  
  .theme-switcher button.active svg {
    stroke: white;
  }
</style>
<script is:inline src="/scripts/theme-switcher.js"></script>
