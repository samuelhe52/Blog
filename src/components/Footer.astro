---
import ThemeSwitcher from './ThemeSwitcher.astro';

interface Props {
  lang: 'zh-CN' | 'en';
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="footer-content">
    <div class="footer-left">
      <p>&copy; {currentYear} konakona. All rights reserved.</p>
      <div class="connect">
        <span class="connect-label">{lang === 'zh-CN' ? '联系' : 'Connect'}:</span>
        <a href="mailto:samuelhe52@outlook.com" title="Email">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
        </a>
        <a href="https://github.com/samuelhe52" target="_blank" rel="noopener noreferrer" title="GitHub">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
            <path d="M9 18c-4.51 2-5-2-7-2"></path>
          </svg>
        </a>
        <a href="/rss.xml" title="RSS" class="rss-link disabled" aria-disabled="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
        </a>
      </div>
    </div>
    <div class="footer-right">
      <ThemeSwitcher lang={lang} />
    </div>
  </div>
</footer>

<style>
  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }
  
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1.5rem;
  }
  
  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .footer-left p {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.875rem;
  }
  
  .connect {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .connect-label {
    color: var(--text-muted);
    font-size: 0.875rem;
  }
  
  .connect a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: var(--text-muted);
    transition: color 0.2s ease-in-out, opacity 0.2s ease-in-out;
  }
  
  .connect a:hover {
    color: var(--link);
    text-decoration: none;
  }
  
  .connect a svg {
    stroke: currentColor;
  }
  
  .connect a.disabled {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }
  
  @media (max-width: 640px) {
    .footer-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }
  }
</style>
