---
import ThemeSwitcher from './ThemeSwitcher.astro';

interface Props {
  lang: 'zh-CN' | 'en';
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="animate">
  <div class="footer-content">
    <div class="footer-info">
      <p>&copy; {currentYear} konakona · Content: CC BY 4.0 · Code: MIT</p>
      <div class="footer-links">
        <a href="mailto:samuelhe52@outlook.com" aria-label="Email" title="Email">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="20" height="16" x="2" y="4" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
        </a>
        <a href="https://github.com/samuelhe52" target="_blank" rel="noopener noreferrer" aria-label="GitHub" title="GitHub">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
            <path d="M9 18c-4.51 2-5-2-7-2"></path>
          </svg>
        </a>
        <a href={lang === 'zh-CN' ? '/rss.xml' : '/en/rss.xml'} aria-label="RSS Feed" title="RSS">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
        </a>
      </div>
    </div>
    <ThemeSwitcher lang={lang} />
  </div>
</footer>

<style>
  footer {
    margin-top: 4rem;
    padding: 2rem 0;
    border-top: 1px solid var(--border);
    transition: border-color 0.3s ease-in-out, transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  }
  
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }
  
  .footer-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .footer-info p {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.8rem;
    white-space: nowrap;
  }
  
  .footer-links {
    display: flex;
    gap: 0.5rem;
  }
  
  .footer-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    transition: color 0.2s ease-in-out, opacity 0.2s ease-in-out;
  }
  
  .footer-links a:hover {
    color: var(--link);
    text-decoration: none;
  }
  
  .footer-links a svg {
    stroke: currentColor;
  }
  
  .footer-links a.disabled {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }
  
  @media (max-width: 640px) {
    .footer-content {
      flex-direction: row;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      text-align: center;
      gap: 1.25rem;
    }

    .footer-info {
      flex: 1 1 100%;
      min-width: 0;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      width: 100%;
    }

    .footer-info p {
      font-size: 0.75rem;
      white-space: normal;
      width: 100%;
      margin-bottom: 0.25rem;
    }

    /* Center theme buttons under content on very narrow widths */
    .footer-content :global(.theme-switcher) {
      margin-left: 0;
      flex-shrink: 0;
      order: 2;
    }

    .footer-links {
      justify-content: center;
      width: 100%;
    }

    .footer-links a {
      padding: 0.25rem;
    }
  }
</style>
