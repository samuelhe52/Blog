---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { SITE } from '../site.config';

interface Props {
  lang: 'zh-CN' | 'en';
  disableZh?: boolean;
  disableEn?: boolean;
  toZh?: string;
  toEn?: string;
}

const { lang, disableZh, disableEn, toZh, toEn } = Astro.props;
const homeUrl = lang === 'zh-CN' ? '/' : '/en/';
---

<header>
  <div class="header-content">
    <a href={homeUrl} class="site-title">{SITE.title}</a>
    <LanguageSwitcher lang={lang} disableZh={disableZh} disableEn={disableEn} toZh={toZh} toEn={toEn} />
  </div>
</header>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    padding: 1.25rem 0;
    background: rgba(250, 250, 249, 0.75);
    backdrop-filter: blur(8px) saturate(180%);
    -webkit-backdrop-filter: blur(8px) saturate(180%);
    border-bottom: 1px solid var(--border);
    transition: background 0.3s ease-in-out, border-color 0.3s ease-in-out;
  }
  
  :root[data-theme="dark"] header {
    background: rgba(28, 25, 23, 0.75);
  }
  
  @media (prefers-color-scheme: dark) {
    :root:not([data-theme]) header {
      background: rgba(28, 25, 23, 0.75);
    }
  }
  
  .header-content {
    max-width: 45rem;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  
  .site-title {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    font-family: var(--font-family);
  }
  
  .site-title:hover {
    color: var(--text);
  }
  
  .site-title:hover {
    text-decoration: none;
    opacity: 0.8;
  }
</style>
