---
import type { FolderStructure } from '../utils/folders';
import { getLocalizedFolderName } from '../utils/folderLocalization';

interface Props {
  structure: FolderStructure;
  lang: 'zh-CN' | 'en';
  currentPath?: string;
}

const { structure, lang, currentPath = '' } = Astro.props;
const baseUrl = lang === 'zh-CN' ? '' : '/en';
const folderBaseUrl = `${baseUrl}/folders`;
const postsUrl = lang === 'zh-CN' ? '/posts' : '/en/posts';

const t = {
  'zh-CN': {
    posts: '文章',
    folders: '文件夹',
    postsCount: (n: number) => `${n} 篇文章`
  },
  'en': {
    posts: 'Posts',
    folders: 'Folders',
    postsCount: (n: number) => `${n} post${n !== 1 ? 's' : ''}`
  }
};

const text = t[lang];
---

<div class="folder-view">
  {structure.posts.length > 0 && (
    <section class="posts-section">
      <h2 class="section-title">{text.posts}</h2>
      <ul class="post-list">
        {structure.posts.map((post) => (
          <li class="post-item">
            <a href={`${postsUrl}/${post.slug}/`} class="post-link">
              <div class="post-info">
                <h3 class="post-title">{post.title}</h3>
                {post.description && <p class="post-description">{post.description}</p>}
              </div>
              <time datetime={post.date.toISOString()}>
                {post.date.toLocaleDateString(lang, {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </time>
            </a>
          </li>
        ))}
      </ul>
    </section>
  )}

  {structure.folders.length > 0 && (
    <section class="folders-section">
      <h2 class="section-title">{text.folders}</h2>
      <ul class="folder-list">
        {structure.folders.map((folder) => (
          <li class="folder-item">
            <a href={`${folderBaseUrl}/${folder.path}/`} class="folder-link">
              <div class="folder-info">
                <h3 class="folder-name">{getLocalizedFolderName(folder.path, lang)}</h3>
                <span class="folder-count">{text.postsCount(folder.postCount)}</span>
              </div>
              <span class="folder-arrow">→</span>
            </a>
          </li>
        ))}
      </ul>
    </section>
  )}
</div>

<style>
  .folder-view {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: var(--text);
  }

  /* Posts Section */
  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    margin: 0;
    border-bottom: 1px solid var(--border);
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1.5rem;
    padding: 1.25rem 0;
    text-decoration: none;
    color: inherit;
  }

  .post-link:hover .post-title {
    color: var(--link);
  }

  .post-info {
    flex: 1;
    min-width: 0;
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: 500;
    margin: 0 0 0.25rem 0;
    transition: color 0.2s;
  }

  .post-description {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  time {
    color: var(--text-muted);
    font-size: 0.85rem;
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Folders Section */
  .folder-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
  }

  .folder-item {
    margin: 0;
  }

  .folder-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.875rem 1.125rem;
    border: 1px solid var(--border);
    border-radius: 6px;
    text-decoration: none;
    color: inherit;
    transition: all 0.15s ease;
    background: transparent;
  }

  .folder-link:hover {
    border-color: var(--link);
    background: rgba(0, 0, 0, 0.02);
  }

  :root[data-theme="dark"] .folder-link:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  @media (prefers-color-scheme: dark) {
    :root:not([data-theme]) .folder-link:hover {
      background: rgba(255, 255, 255, 0.05);
    }
  }

  .folder-info {
    flex: 1;
    min-width: 0;
  }

  .folder-name {
    font-size: 1rem;
    font-weight: 500;
    margin: 0 0 0.25rem 0;
    transition: color 0.2s;
  }

  .folder-link:hover .folder-name {
    color: var(--link);
  }

  .folder-count {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .folder-arrow {
    color: var(--text-muted);
    font-size: 1.1rem;
    flex-shrink: 0;
    transition: transform 0.15s ease;
  }

  .folder-link:hover .folder-arrow {
    transform: translateX(3px);
    color: var(--link);
  }

  @media (max-width: 640px) {
    .post-link {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .folder-link {
      padding: 0.75rem 1rem;
    }
  }
</style>
